<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

       <RadioGroup
            android:id="@id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/maintab_toolbar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
           

            <RadioButton
                android:id="@id/radio_button0"
                style="@style/main_tab_bottom"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/weixin_btn_bg"
                android:drawableTop="@drawable/tab_weixin_normal"
                android:text="@string/location" />

            <RadioButton
                android:id="@id/radio_button1"
                style="@style/main_tab_bottom"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/history_btn_bg"
                android:drawableTop="@drawable/tab_address_normal"
                android:text="@string/history" />

            <RadioButton
                android:id="@id/radio_button2"
                style="@style/main_tab_bottom"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/fence_btn_bg"
                android:drawableTop="@drawable/tab_find_frd_normal"
                android:text="@string/electronic_fence" />

            <RadioButton
                android:id="@id/radio_button3"
                style="@style/main_tab_bottom"
                android:background="@drawable/setting_btn_bg"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/tab_settings_normal"
                android:text="@string/settings" />
        </RadioGroup>
    
    
</LinearLayout>
